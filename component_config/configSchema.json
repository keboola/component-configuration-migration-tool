{
    "type": "object",
    "title": "Configuration Migration Tool",
    "properties": {
      "origin": {
        "enum": [],
        "type": "string",
        "title": "Origin Component",
        "options": {
          "async": {
            "label": "Load supported migrations",
            "action": "supported-migrations"
          }
        },
        "description": "Set the origin component for migration."
      },
      "destination": {
        "type": "string",
        "title": "Destination Component",
        "readOnly": true,
        "description": "Destination component for migration. It is automatically loaded when the origin component is saved. After it is loaded, you need to save the configuration again."
      },
      "load-destination": {
        "type": "button",
        "format": "sync-action",
        "options": {
          "async": {
            "label":"Load destination (automatically)",
            "action": "load-destination",
            "autoload": [
              "parameters.origin"
            ],
            "cache": false
          },
          "hidden": false
        }
      }
    }
  }